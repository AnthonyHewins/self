<div class="ui form center">
  <%= form_with url: articles_path, method: :get, class: "four fields" do |f| %>

    <div class="field">
      <div class="column ui icon input">
        <%= f.text_field :q, value: params[:q], placeholder: "Query" %>
      </div>
    </div>

    <div class="field">
      <%= render 'tags/dropdown', multiple: true, selected: :tags %>
    </div>

    <div class="field">
      <%= render 'users/dropdown', selected: :users %>
    </div>

    <div class="field">
      <button class="ui blue button" style="width: 100%" onclick="form.submit()">
        <i class="search icon"></i>
        Search
      </button>
    </div>
  <% end %>
</div>
