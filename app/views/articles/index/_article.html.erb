<div class="item" id="<%= dom_id(article) %>">

  <div class="ui tiny image">
    <%= image_tag(article.tldr_image.attachment) %>
  </div>

  <div class="content">
    <%= link_to article.get_title, article, class: "header" %>

    <div class="meta">
      <%= author_label article %>
      <%= render partial: 'tags/tag', collection: article.reload.tags %>
    </div>

    <div class="description">
      <%= article.get_tldr %>
    </div>

    <div class="extra">
      Created at <%= article.created_at %>
    </div>
  </div>
</div>
