<p id="notice"><%= notice %></p>


<div class="control">
  <div class="tags has-addons">
    <%= link_to new_project_path, class: "tag is-success is-medium", style: "text-decoration:none" do %>
      <strong>+</strong>
    <% end %>
    <span class="tag is-medium">New project</span>
  </div>
</div>

<br>

<div class="tile is-ancestor">
  <div class="tile is-parent">
    <% @projects.each do |project| %>
      <article class="tile is-child box is-3">
        <%= image_tag project.image, class: "image is-128x128" %>
        <a href="<%= project.url %>">
          <p class="title"><%= project.name %></p>
        </a>
        <%= link_to 'Show', project %>
        <%= link_to 'Edit', edit_project_path(project) %>
        <%= link_to 'Delete', project, method: :delete, data: {confirm: 'Are you sure?'} %>
      </article>
    <% end %>
  </div>
</div>