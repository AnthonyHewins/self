<div class="ui secondary menu">

  <div class="item">
    <%= link_to image_tag("sudobangbang_white.gif", width: 100, height: 25), root_path %>
  </div>

  <div class="ui pointing dropdown link item">
    <span class="text">Articles</span>
    <i class="dropdown icon"></i>
    <div class="menu">
      <%= link_to "All", articles_path, class: "item" %>
      <%= link_to "New", new_article_path, class: "item" %>
    </div>
  </div>

  <div class="right menu">
    <% if current_user.nil? %>
      <%= link_to "Log in", login_path, class: "item" %>
    <% else %>
      <div class="ui pointing dropdown link item">
        <span class="text"><%= current_user.handle %></span>
        <i class="dropdown icon"></i>
        <div class="menu">
          <%= link_to "Edit profile", edit_user_path(current_user), class: "item" %>
          <%= link_to "View profile", user_path(current_user), class: "item" %>
          <%= link_to "Change password", change_password_users_path, class: "item" %>
          <%= link_to "Log out", logout_path, class: "item" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
