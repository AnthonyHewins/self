<%= form_with(model: user, local: true, id: dom_id(user), class: "ui form") do |f| %>  
  <div class="field">
    <%= f.label :profile_picture, "Profile picture", class: 'label' %>
    <%= f.file_field :profile_picture, id: 'tldr-image' %>
  </div>

  <div class="field">
    <%= f.label :handle, class: 'label' %>
    <%= f.text_field :handle %>
  </div> 

  <div class="actions">
    <%= f.submit "Submit", class: "ui primary button", id: "submit-user" %>
  </div>
<% end %>
