<% if local_assigns.key? :users %>
  <% users = local_assigns[:users] %>
<% else %>
  <% users = User.select(:id, :email, :handle).all %>
<% end %>

<%#================================================================%>

<div class="ui fluid search selection dropdown">
  <input name="author" type="hidden">

  <i class="dropdown icon"></i>
  <%= content_tag :div, "Users", class: "default text" %>

  <div class="menu">

    <% users.each do |user| %>
      <div class="item" data-value="<%= user.id %>">
        <%= image_tag(user.gravatar_url, rating: 'X', secure: true) %>
        <%= user.handle %>
      </div>
    <% end %>

  </div>
</div>
