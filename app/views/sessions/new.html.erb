<div class="ui center aligned login-form">
  <div class="ui padded segment">
    <h2 class="blue">
      Login
    </h2>

    <%= form_tag login_path, method: :post, class: "ui large form" do %>
      <div class="stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= text_field_tag :handle, nil, placeholder: "Handle" %>
          </div>
        </div>

        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= password_field_tag :password, nil, placeholder: "Password" %>
          </div>
        </div>
        <%= submit_tag "Login", id: "login", class: "ui fluid large blue submit button" %>
      </div>
    <% end %>
  </div>
</div>
